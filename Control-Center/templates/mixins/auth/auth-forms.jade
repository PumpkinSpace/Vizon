//-
	Forms
	------------------------------
	
	Args
	* modal  - boolean
	* initial [default "signup"] - accepts "signin" | "signup" | "password"
	* from - specify a page
	
include form-signup
include form-password
include form-reset
include form-signin

mixin auth-forms(args)
	if args.modal
		+form-signin(args)
		+form-signup(args)
		+form-password(args)
			
	else
		if args.initial == 'signup'
			+form-signup(args)
		else if args.initial == 'password'
			+form-password(args)
		else if args.initial == 'reset'
			+form-reset(args)
		else
			+form-signin(args)
	
